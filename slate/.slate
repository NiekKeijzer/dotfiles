# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Monitor aliases
alias mon-internal   0
alias mon-external   1

# General aliases
alias sox screenOriginX
alias soy screenOriginY
alias ssx screenSizeX
alias ssy screenSizeY

# Position aliases 
alias centered ${sox}+${ssx}/8;${soy}+${ssy}/8 ${ssx}/8*6;${ssy}/8*6
alias fullscreen ${sox};${soy} ${ssx};${ssy}
alias leftHalf ${sox};${soy} ${ssx}/2;${ssy}
alias bottomHalf ${sox};${soy}+${ssy}/2 ${ssx};${ssy}/2
alias topHalf ${sox};${soy} ${ssx};${ssy}/2
alias rightHalf ${sox}+${ssx}/2;${soy} ${ssx}/2;${ssy}
alias topLeftQuarter ${sox};${soy} ${ssx}/2;${ssy}/2
alias topRightQuarter ${sox}+${ssx}/2;${soy} ${ssx}/2;${ssy}/2
alias bottomLeftQuarter ${sox};${soy}+${ssy}/2 ${ssx}/2;${ssy}/2
alias bottomRightQuarter ${sox}+${ssx}/2;${soy}+${ssy}/2 ${ssx}/2;${ssy}/2

# Resize Bindings
bind up:alt;ctrl     move ${fullscreen}
bind down:alt;ctrl   move ${centered}
bind up:cmd;ctrl     move ${topHalf}
bind down:cmd;ctrl   move ${bottomHalf}
bind left:cmd;ctrl   move ${leftHalf}
bind right:cmd;ctrl  move ${rightHalf}

bind left:ctrl;alt   throw next
bind right:ctrl;alt  throw previous

# 2 Monitor layout
layout twoScreen     'Phpstorm' move    ${fullscreen}   0
layout twoScreen     'iTerm'    move    ${bottomHalf}   1
layout twoScreen     'Safari'   move    ${topHalf}      1

# Window Hints
bind esc:cmd hint
